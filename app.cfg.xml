<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<!-- storage paths -->
	<entry key="file.store.path">/path/to/music</entry> <!-- path to local music directory -->
	<entry key="file.tmp.path">/tmp</entry>	<!-- path to store downloaded music temporary -->
	<entry key="file.testdata">/path/to/test/data</entry> <!-- used for test peers, needs to be activated -->
	
	<!-- overlay settings -->
	<entry key="overlay.network.peer.ip">127.0.0.1</entry> <!-- local ip -->
	<entry key="overlay.network.port">4001</entry> <!-- local port -->
	<entry key="overlay.network.bootstrap.ip"/> <!-- bootstrap ip, empty means bootstrap node -->
	<entry key="overlay.network.bootstrap.port">4001</entry> <!-- bootstrap port -->
	
	<!-- recommender settings -->
	<entry key="recommender.rating.playvalue">1</entry>
	<entry key="recommender.rating.ratingthreshold">5</entry>
	<entry key="recommender.rating.skipvalue">2</entry>
	<entry key="recommender.affinitylist.length">15</entry>
	<entry key="recommender.playlist.ratio">3</entry>
	<entry key="recommender.recommendedsongs.length">15</entry>
	
	<!-- song buffer -->
	<entry key="songhandler.downloadlist.length">5</entry>
	
</properties>
